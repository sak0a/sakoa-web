[Unit]
Description=Sakoa.xyz Node.js Application Deployment Watcher (Simple)
After=network.target

[Service]
Type=simple
User=root
Group=root
ExecStart=/usr/local/bin/sakoa-deployment-watcher-simple.sh
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
